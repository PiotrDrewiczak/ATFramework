<Window x:Class="TesterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesterApp"
        mc:Ignorable="d"
        Title="ATFramework" Height="800" Width="600"
        Background="Transparent">
    
    <Border Background="#272537">
        <StackPanel>
            <Grid>
            <Button x:Name="Run" 
                    Content="Run" 
                    Height="20"
                    Width="Auto" 
                    Margin="0,50,0,0"/>
            <Button x:Name="Stop" 
                    Content="Stop"
                    Height="20"
                    Width="Auto"
                    Margin="0,100,0,0"/>
            <Button x:Name="Load"
                    Content="Load"
                    Height="20"
                    Width="Auto" Click="Load_Click"/>
            <ListBox x:Name="ScriptsView"
                     Height="100" 
                     Margin="0,300,0,0"/>
            <ListBox x:Name="XmlView" 
                     Height="100" 
                     Margin="0,500,0,0"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
